{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (GCC)",
            "command": "g++",
            "type": "shell",
            "args": [
                "-std=c++1y",
                "-O0",
                //"-o",
                //"$(wslpath '${fileDirname}/${fileBasenameNoExtension}')",
                "-g",
                //"-fsanitize=undefined",
                "-DLOCAL",
                "-Wshadow",
                "-Wempty-body",
                "-I.cache/cxxpch",
                "$(wslpath '${file}')",
                //"`wslpath '${file}'`",
                //"-H", //使用される個々のヘッダ・ファイルを表示
                //"-ftime-report",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "shell": {
                    //"executable": "C:\\Windows\\System32\\wsl.exe",
                    //"executable": "${env:windir}\\system32\\bash.exe",
                    "executable": "C:\\Windows\\System32\\bash.exe",
                    "args": [
                        "-c"
                    ]
                }
            }
        },
        {
            "label": "oj tests",
            "command": "oj",
            "type": "shell",
            "args": [
                "test",
            ],
            "group": {
                "kind": "test",
                //"isDefault": true
            },
            "presentation": {
                "reveal": "always",
                //"panel": "dedicated"
            },
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\bash.exe",
                    "args": [
                        "-c"
                    ]
                }
            }
        },
        {
            "label": "Run oj tests",
            "command": "rake",
            "type": "shell",
            "args": [
                "invoke_test",
                "CPP_SRC=$(wslpath '${file}')",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                //"panel": "dedicated"
            },
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\bash.exe",
                    "args": [
                        "-c"
                    ]
                }
            }
        },
        {
            "label": "Download oj test",
            "type": "shell",
            "command": "rake",
            "args": [
                "dl_test",
                "CPP_SRC=$(wslpath '${file}')",
            ],
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\bash.exe",
                    "args": [
                        "-c"
                    ]
                }
            }
        },
        {
            "label": "Submit src",
            "type": "shell",
            "command": "rake",
            "args": [
                "submit",
                "CPP_SRC=$(wslpath '${file}')",
            ],
            "presentation": {
                "focus": true,
            },
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\bash.exe",
                    "args": [
                        "-c"
                    ]
                }
            }
        },
    ]
}